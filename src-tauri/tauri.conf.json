{
  "build": {
    "distDir": "../src",
    "devPath": "../src",
    "beforeBuildCommand": ""
  },
  "package": {
    "productName": "FocusPro",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": { "all": true, "execute": true },
      "window": { "all": true, "setFullscreen": true, "setAlwaysOnTop": true }
    },
    "bundle": {
      "active": true,
      "identifier": "com.focus.pro",
      "icon": ["icons/icon.ico"]
    },
    "windows": [
      {
        "title": "FocusPro Dashboard",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "center": true
      }
    ]
  }
}