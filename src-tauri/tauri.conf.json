{
  "build": {
    "distDir": "../src",
    "devPath": "../src",
    "beforeBuildCommand": ""
  },
  "package": {
    "productName": "FocusPro",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "execute": true,
        "sidecar": false,
        "open": true
      },
      "window": {
        "all": true,
        "setFullscreen": true,
        "setAlwaysOnTop": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.focus.pro",
      "icon": [
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "FocusPro",
        "width": 400,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "alwaysOnTop": false,
        "center": true
      }
    ]
  }
}